<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg_all"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/account_flag"
        android:visibility="gone"
        android:background="#f29d38"
        android:gravity="center"
        android:textSize="12sp"
        android:text="当前帐号"
        android:textColor="#fffff9"
        android:layout_gravity="right"
        android:layout_width="60dp"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sunmi.blockchainlottery.view.CustomImageView

                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/avatar"
                    app:radius="10dp"
                    app:circle="true"
                    android:id="@+id/iv_build_icon" />

                <TextView
                    android:id="@+id/name"
                    android:textColor="#333333"
                    android:layout_marginLeft="8dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:text="Sheeran"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp" />

                <TextView
                    android:textColor="#333333"
                    android:layout_marginLeft="52dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="账户余额："
                    android:layout_width="wrap_content"
                    android:layout_height="42dp" />
                <TextView
                    android:id="@+id/asset"
                    android:textColor="#f29d4b"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:text="0.00"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:text="523629360325923502693623...>"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/small_qr_code"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</FrameLayout>