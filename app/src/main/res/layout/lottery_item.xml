<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
   android:layout_margin="10dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_bg_all">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_seq_tv"
                android:textColor="#333333"
                android:textSize="12sp"
                android:text="8月5日第101轮"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/status_tv"
                android:gravity="right"
                android:textColor="#333333"
                android:textSize="12sp"
                android:text="竞猜中"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingRight="4dp"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:text="当前投注金额："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sum_bet_tv"
                    android:textSize="20sp"
                    android:textColor="#333333"
                    android:text="34514352.233"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/bet_action"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="立即投注"
            android:layout_marginTop="16dp"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:background="@drawable/corner_color_all">
        </TextView>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:textColor="#333333"
            android:id="@+id/left_time_tv"
            android:text="60秒后结束投注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/award_layout"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="12dp"
                android:text="我的奖金："
                android:textColor="#f29d38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/award"
                android:textSize="20sp"
                android:text="0"
                android:textColor="#f29d38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:textSize="14sp"
            android:textColor="#bc4166"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="本场竞猜区块链地址：oLIQX5x0othb3y...>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>